{
  "rewrites": [
    {
      "source": "/register",
      "destination": "/public/index.html"
    },
    {
      "source": "/login",
      "destination": "/public/index.html"
    },
    {
      "source": "/chat",
      "destination": "/public/index.html"
    },
    {
      "source": "/user/me",
      "destination": "/public/index.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "routes": [
    {
      "src": "/(register|login|chat|user/me|api/.*)",
      "dest": "server.cjs"
    }
  ]
}